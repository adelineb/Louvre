<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Réservation n°{{ coderesa }}</title>
    <link rel="stylesheet" href="{{ absolute_url(asset('css/billet.css')) }}">
</head>
<body>
<div id="billets">
    {% set infos = app.session.get('Infos') %}
    {% for billet in infos.getClients() %}
        <div class="row">
            <div id="fond"></div>
            <div class="col-md-3">
                <img src="{{ absolute_url(asset('images/louvre_logo.png'))}}" alt="Logo Louvre" id="logo"/>
                <h2>Musée du Louvre</h2>
            </div>

            <div class="col-md-6">
                <h3>Visite du musée</h3>


                <p>Visite pour le {{ app.session.get('Billet').getDate()|date("d/m/Y") }}, à partir de
                    {% if app.session.get('Billet').getTypeBillet == "1" %}
                        9h
                    {% else %}
                        14h
                    {% endif %}
                </p>
                <hr />
                <p>{{ billet.nom }} {{ billet.prenom }} / Tarif {{ billet.tarif }}</p>
                <div class="col-md-3" id="code">
                    <p>Réservation n° {{ coderesa }}</p>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
</body>